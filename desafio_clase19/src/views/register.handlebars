<header>
  <a href="/">Home</a>
  <h1>Products</h1>
  <div>
    {{#if isLogin}}
      <a href="/user">Bienvenido {{user.first_name}} {{user.last_name}}</a>
    {{else}}
      <a href="/login">Inicia sesión aquí</a>
    {{/if}}
  </div>
</header>
<link rel="stylesheet" href="/css/styles.css">

<main>
    <form action="" method="post" id="registerForm" class="form">
        <div class="formOrder">
            <p class="formText">Nombre</p> <input type="text" name="first_name">
            <p class="formText">Apellido</p> <input type="text" name="last_name">
            <p class="formText">Edad</p> <input type="number" name="age">
            <p class="formText">Correo electrónico</p> <input type="text" name="email">
            <p class="formText">Contraseña</p> <input type="password" name="password">
        </div>
        <button type="submit" class="submit">Crear cuenta</button>
    </form>
    <div class="switch">
        <p>Inicia sesión <a href="http://localhost:8080/login">aqui</a></p>
    </div>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/register.js"></script>
