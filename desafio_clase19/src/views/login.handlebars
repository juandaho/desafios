<header>
  <a href="/">Home</a>
  <h1>Products</h1>
  <div>
    {{#if isLogin}}
      <a href="/user">Bienvenido {{user.first_name}} {{user.last_name}}</a>
    {{else}}
      <a href="/login">Inicia sesión aquí</a>
    {{/if}}
  </div>
</header>
<link rel="stylesheet" href="/css/styles.css">

<main class="login-main">
    <form action="" method="post" id="loginForm" class="login-form">
        <div class="formOrder">
            <p class="formText">Correo electrónico</p> <input type="text" name="email">
            <p class="formText">Contraseña</p> <input type="password" name="password">
        </div>
        <button type="submit" class="submit">Iniciar sesión</button>
    </form>
    <div class="switch">
        <p>Crea tu cuenta <a href="http://localhost:8080/register">aqui</a></p>
    </div>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/login.js"></script>
